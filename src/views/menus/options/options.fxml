<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="optionsMenu" visible="false"
            xmlns="http://javafx.com/javafx/8.0.65" fx:controller="controllers.menus.Options">
    <children>

        <VBox fx:id="menu" visible="true" onKeyReleased="#keyHandler" AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Button id="graphics" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onMouseClicked="#mouseHandler" text="GRAPHICS">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <Button id="audio" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler"
                    text="AUDIO">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <Button id="input" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler"
                    text="INPUT">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <Button id="credits" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onMouseClicked="#mouseHandler" text="CREDITS">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <Button id="back" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler"
                    text="BACK">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
        </VBox>


        <fx:include source="audio/audio.fxml" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"/>
