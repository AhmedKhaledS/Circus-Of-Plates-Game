                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button id="audio" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler" text="AUDIO">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button id="input" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler" text="INPUT">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button id="credits" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler" text="CREDITS">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button id="back" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler" text="BACK">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
        </VBox>


        <AnchorPane fx:id="audio" visible="false" AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <fx:include source="audio/audio.fxml" AnchorPane.topAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
        </AnchorPane>

