<?import javafx.scene.layout.AnchorPane?>
<AnchorPane fx:id="optionsMenu" onKeyReleased="#keyHandler" visible="false" xmlns="http://javafx.com/javafx/8.0.65"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.menus.Options" >
    <children>

        <VBox fx:id="menu" visible="true" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
