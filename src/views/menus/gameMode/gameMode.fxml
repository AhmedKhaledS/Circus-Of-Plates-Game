<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<!-- game mode menu -->
<VBox fx:id="gameModeMenu" alignment="CENTER" visible="false" 
      fx:controller="controllers.menus.GameMode" xmlns:fx="http://javafx.com/fxml/1"
      onKeyReleased="#keyHandler">
    <children>
        <Button id="timeAttack" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler" text="TIME ATTACK">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <Button id="normal" maxWidth="1.7976931348623157E308" mnemonicParsing="false"  onMouseClicked="#mouseHandler" text="NORMAL">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <Button id="chooseLevel" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler" text="CHOOSE LEVEL">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <Button id="back" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#mouseHandler" text="BACK">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
    </children>
    <stylesheets>
        <URL value="@gameMode.css" />
    </stylesheets>
</VBox>